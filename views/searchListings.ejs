<%-layout("layouts/boilerPlate.ejs")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
    <%- include("../views/includes/options.ejs") %>
    <h4 class="form-label mx-3">Search results for "<%=searchTerm%>"</h4>
    <div class="row row-cols-lg-3 row-cols-md-2 listings row-cols-sm-1 mx-2">
        <%for(listing of resultListings){%>
        <a href="http://localhost:8080/listings/<%=listing.id%>">
          <div class="card" style="width: 25rem">
            <img
              src="<%=listing.image.url%>"
              class="card-img card-img-top"
              alt="listing_image"
            />
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%=listing.title%></b
                >,<%=listing.country%><br />&#8377;<%=listing.price.toLocaleString("en-IN")%><span
                  class="tax_info"
                  ><i>&nbsp;+&nbsp;18% GST</i></span
                >
                / night
              </p>
            </div>
          </div>
        </a>
        <%}%>
      </div>
      
</body>
</html>
