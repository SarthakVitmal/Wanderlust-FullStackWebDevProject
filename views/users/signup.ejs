<% layout("/layouts/boilerPlate") %>

<div class="row mt-3">
  <h1 class="col-12 col-sm-6 offset-sm-1 col-md-6 offset-md-3 text-center">
    SignUp on Wanderlust
  </h1>
  <div class="col-12 col-sm-6 col-md-4 offset-md-4">
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="d-grid">
        <button class="btn bg-success text-white">Sign Up</button>
      </div>
    </form>
    <hr>
    <div class="mt-3 rounded d-grid">
      <a href="/auth/google" class="btn btn-light border border-secondary bg-light text-black w-100 center">
        Continue with &nbsp; <img width="26" height="26" src="https://img.icons8.com/color/64/google-logo.png" alt="google-logo"/>
      </a>
    </div>
  </div>
</div>
